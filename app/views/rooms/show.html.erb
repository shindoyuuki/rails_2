<h1>確認一覧</h1>
 
 <table>
      <tr>
        <th>部屋番号</th>
        <td><%= @room.id %></td>
      </tr>
      <tr>
        <th>ルーム画像</th>
        <td><img src=<%= @room.room_image %> class = "icon_imagea"></td>
      </tr>
      <tr>
        <th>料金</th>
        <td><%= @room.price %></td>
      </tr>
      <tr>
        <th>ルーム紹介</th>
        <td><%= @room.introduction %></td>
      </tr>
</table>
 
 <h4>予約する</h4>
  <%= form_for @reservation do |f| %>

      <div class="field form-row">
      
        <%= f.label :start_date, "開始日" %>
        <%= f.date_field :start_date, class: 'form-control mb-4' %>
      </div>

      <div class="field form-row">
        <%= f.label :end_date, "終了日" %>
        <%= f.date_field :end_date, class: 'form-control mb-4' %>
      </div>

      <div class="field form-row">
        <%= f.label :number_of_people, "人数" %>
        <%= f.number_field :number_of_people, class: 'form-control mb-4' %>
      </div>
      
    <%= f.hidden_field :room_id, value: @room.id %>
    <%= f.hidden_field :price, value: @room.price%>
   
      <div class="actions">
        <%= f.submit "予約する", class: 'form-control btn-primary mb-4' %>   
      </div>
  <% end %>